{
  "name": "naoyukik/custom-rules-for-static-code-analysis",
  "description": "Custom rules and configurations for static code analysis tools for PHP projects",
  "version": "2.0.0",
  "license": "MIT",
  "authors": [
    {
      "name": "naoyukik"
    }],
  "require-dev": {
    "cakephp/cakephp-codesniffer": "^5.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0.0",
    "jetbrains/phpstorm-stubs": "^2024.3",
    "phpmd/phpmd": "^2.15.0",
    "squizlabs/php_codesniffer": "^4.0.1",
    "vimeo/psalm": "^6.0",
    "zebra-north/phpcs-short-types": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/",
      "Test\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
